{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "target": "ES2016",
    "module": "ES2020",
    "lib": ["ES2021", "DOM"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
